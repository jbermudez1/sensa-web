//- TOPBAR
nav
	box-shadow 0px 0px 10px black
	position fixed
	width 100%
	background-color white
	z-index 99
	border-top solid 2px $sensa-red
	height $menu-height
	padding-top 0.5em
	padding-bottom 0.5em
	.topbar
		display flex
		align-items center
		.burger
			color $sensa-blue
			font-size 2em
			margin-right 1em
		.logo
			flex-grow 2
			text-align center
			img
				max-height 4em
		.menu
			ul
				display flex
				list-style none
				li 
					margin-left 1em
					color $sensa-blue
					a
						color $sensa-blue
.banner
	background-image url('../img/banner1.jpg')
	background-position center
	background-size cover
	color white
	.container
		display flex
		align-items center
		min-height 100vh
		h1
			position relative
			font-size 3em
			font-weight 100
			margin-left 20px
			width 12em
			&:before
				content ""
				background-color $sensa-red
				width 7px
				position absolute
				height 1em
				left -20px
				

.system
	position relative
	padding-right 0px
	padding-left 0px
	min-height 15em
	padding-bottom 2em
	.box
		// position absolute
		// width 100%
		top -5em
		background-color $sensa-blue
		background-linear-gradient(top, #FF3F3E, 5%, #A01E1F, 85%)
		min-height 10em
		color white
		padding 1em
		box-shadow 0px 0px 10px black
		.allicons
			img
				width 3em
		.circle-wrap
			display flex
			flex-flow column
			align-items center
			position relative
			.float
				right 35%
				top -4em
				
			.circle
				background-color $sensa-blue
				width 8em
				height 8em
				border-radius 40em	
				padding 3em
				display flex
				justify-content center
				align-items center
		

@media (min-width $screen-sm)
	nav
		.topbar
			.logo
				text-align left
	.system
		padding-right 15px
		padding-left 15px
		.box
			position absolute
			width 100%
			.float
				position absolute
	.banner
		.container
			min-height 70vh
		


