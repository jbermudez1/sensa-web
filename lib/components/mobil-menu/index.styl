.mobil-menu
	position fixed
	z-index 90
	height 100vh
	width 80%
	transform translate3d(-100%, 0, 0)
	background-color white
	padding-top $menu-height
	transition all 0.3s ease
	ul
		list-style none
		margin 0
		padding 0
		a
			height 3em
			background-color #f3f3f3f3
			margin-top 1px
			display flex
			align-items center
			padding-left 1em

.show-menu
	transform translate3d(0, 0, 0) !important